<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="items.Message" table="UserMessagesH">
        <meta attribute="class-description">
            This class contains developer's details.
        </meta>
        <id name="id" type="int" column="id"/>
        <property name="userId" column="userId" type="int"/>
        <property name="chatId" column="chatId" type="int"/>
        <property name="date" column="departureDate" type="string"/>
        <property name="context" column="context" type="string"/>
    </class>
</hibernate-mapping>